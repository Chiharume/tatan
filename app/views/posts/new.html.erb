<h3>新しく投稿する</h3>
<%= form_for @post do |f| %>
    
<div class="field">
<%= f.label :title %>
<%= f.text_field :title, :size => 30 %>
</div>

<div class="field">
<%= f.label :body  %>
<%= f.text_area :body, :size => "30x2" %>
</div>

<div class="field">
<%= f.label :image %>
<%= f.file_field :image %>
</div>

<%= f.submit "投稿する" %>
<% end %>